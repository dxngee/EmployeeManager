<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:EmployeeManager.ViewModels"
        xmlns:views="clr-namespace:EmployeeManager.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="200"
        x:Class="EmployeeManager.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        x:Name="TheMainWindow"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        Width="800" Height="400"
        Background="Transparent"
        TransparencyBackgroundFallback="Transparent">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Border
        Background ="#24262d"
        CornerRadius="10">
        <StackPanel>
            <!-- menu bar -->
            <views:TopbarView/>
            
            <!-- main area -->
            <Grid>
                <Button Command="{Binding DoTheThing}"> 0 </Button>
            </Grid>
        </StackPanel>
    </Border>

</Window>